<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bbs_menu_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/bbs_content_padding"
    android:paddingLeft="@dimen/slide_item_margin_medium"
    android:paddingRight="@dimen/slide_item_margin_medium"
    android:paddingTop="@dimen/bbs_content_padding" >

    <com.bbs.widgets.BBSTextView
        android:id="@+id/txt_cell_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="To Children Community"
        android:textColor="@color/black"
        android:textSize="@dimen/text_font_size_big" />

    <com.bbs.widgets.BBSTextView
        android:id="@+id/txt_cell_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_cell_name"
        android:text="Fri, Jun 20 2015"
        android:textColor="@color/bbs_menu_list_subtext"
        android:textSize="@dimen/text_font_size_big" />

    <com.bbs.widgets.BBSTextView
        android:id="@+id/txt_cell_amount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="$100"
        android:textColor="@color/slide_menu_text_color_active"
        android:textSize="@dimen/text_font_size_big" />

</RelativeLayout>